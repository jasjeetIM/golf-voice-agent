{
  "name": "@golf/backend",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "pnpm run test:unit && npm run test:typescript",
    "test:typescript": "tsd",
    "migrate": "psql \"$DB_CONNECTION_STRING\" -f src/db/migrations/0001_init.sql",
    "seed": "tsx scripts/seedSlots.ts"
  },
  "dependencies": {
    "@golf/shared-schemas": "workspace:*",
    "dotenv": "^16.4.0",
    "pg": "^8.12.0",
    "zod": "^4.0",
    "fastify": "^4.27.0",
    "pino": "^9.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/pg": "^8.6.6",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0",
    "vitest": "^2.1.0",
    "eslint": "^9.10.0",
    "tsup": "^8.5.1"
  }
}
