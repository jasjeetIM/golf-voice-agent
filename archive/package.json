{
  "name": "golf-voice-agent",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r exec rm -rf dist .tsbuildinfo",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "pnpm run test:unit && npm run test:typescript",
    "test:typescript": "tsd",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "dotenv": "^16.4.0",
    "zod": "^4"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.27.2"
    }
  }
}
